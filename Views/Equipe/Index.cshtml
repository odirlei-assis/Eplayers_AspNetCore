@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form class="cadastro" method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <div class="campo">
        <label>ID</label>
        <input type="text" name="IdEquipe" />
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome" />
    </div>

    <div class="campo">
        <label>Imagem</label>
        <input type="file" name="Imagem" />
    </div>

    <button class="btn gradient" type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach (Equipe e in ViewBag.Equipes)
        {
            <tr>
                <td>@e.IdEquipe</td>
                <td>@e.Nome</td>
                <td><img src="/img/Equipes/@e.Imagem" alt="Imagem da equipe @e.Nome" width="50px"></td>
                <td><a asp-area="Link para excluir a equipe" asp-controller="Equipe" asp-action="Excluir"
                    asp-route-id="@e.IdEquipe">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>